// -*- C++ -*-
#ifndef _EZCXX_MEMORY
#define _EZCXX_MEMORY

#include <EASTL/memory.h>
#include <EASTL/unique_ptr.h>
#include <EASTL/shared_ptr.h>

#pragma clang system_header

namespace std {

template <typename _Tp, class _Deleter = void>
using unique_ptr = eastl::unique_ptr<_Tp>;

template <typename _Tp>
using shared_ptr = eastl::shared_ptr<_Tp>;

template <typename _Tp>
using weak_ptr = eastl::weak_ptr<_Tp>;

template <typename _Tp>
using allocator = eastl::allocator;

template <class _Tp>
inline _Tp* addressof(_Tp& __x) noexcept {
    return __builtin_addressof(__x);
}

template <class _Tp>
_Tp* addressof(const _Tp&&) noexcept = delete;

} // namespace std

#endif // _EZCXX_MEMORY
