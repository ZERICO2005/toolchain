	assume	adl=1

	section	.text
	public	__bshl

if PREFER_OS_CRT

__bshl := 000100h

else

__bshl:
; A = A << B
; CC: 19 bytes + (ADL ? 3R : 2R)
; 0: 14F + 4
; 1: 16F + 4
; 2: 15F + 3
; 3: 17F + 3
; 4: 17F + 3
; 5: 19F + 3
; 6: 18F + 2
; 7: 20F + 2
	bit	2, b
	jr	z, .bit2
	add	a, a
	add	a, a
	add	a, a
	add	a, a
.bit2:
	bit	1, b
	jr	z, .bit1
	add	a, a
	add	a, a
.bit1:
	bit	0, b
	ret	z
	add	a, a
	ret

end if
