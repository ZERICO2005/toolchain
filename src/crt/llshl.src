	assume	adl=1

	section	.text
	public	__llshl
__llshl:
; Suboptimal for large shift amounts
	push	af

	push	hl
	ld	hl, 9
	add	hl, sp
	ld	a, (hl)
	sub	a, 48
	jr	nc, .large_shift
	ld	a, b
	ld	b, (hl)
	pop	hl

	inc	b
	jr	.begin

.loop:
	add	hl, hl
	ex	de, hl
	adc	hl, hl
	ex	de, hl
	rl	c
	rla
.begin:
	djnz	.loop

	ld	b, a
	pop	af
	ret

.large_shift:
	pop	hl
	ld	c, a	; C = shift
	call	__sshl
	ld	b, h
	ld	c, l
	or	a, a
	sbc	hl, hl
	ex	de, hl
	sbc	hl, hl
	pop	af
	ret

	extern	__sshl
