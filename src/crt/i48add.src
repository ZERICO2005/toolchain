; Performs 48-bit addition
;
; Returns:
; ude:uhl = ude:uhl + uiy:ubc

	assume	adl=1

	section	.text

	public	__i48add
	public	__i48addu_overflow
	public	__i48adds_overflow

__i48addu_overflow:
	; returned flags:
	; NC : no unsigned overflow
	; C  : unsigned overflow occured
__i48adds_overflow:
	; returned flags:
	; PO : no signed overflow
	; PE : signed overflow occured
__i48add:
	add	hl, bc
	ex	de, hl
	push	bc
	lea	bc, iy
	adc	hl, bc
	pop	bc
	ex	de, hl
	ret
